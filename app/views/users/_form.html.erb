<%= simple_form_for @user do |f|  %>
  <div class="inputs">
    <%- unless f.error_notification.blank? -%>
      <%= f.error_notification %>
    <%- end -%>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.button :button, "Submit", class: "button__line" -%>
  </div>
<% end %>
